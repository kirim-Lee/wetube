extends layouts/main

block content
   .form-container
        form(method='post', action=`${routes.users}${routes.editProfile}`, enctype="multipart/form-data")
            label(for='avatar') Avatar
            input(type='file', name='avatar', id='avatar', accept="image/*")
            input(type='text', name='name', placeholder='Full Name', value=loggedUser.name)
            input(type='email', name='email', placeholder='Email', value=loggedUser.email)
            input(type='submit', value='Update Profile')
        a.form-container__link(href=routes.users+routes.changePassword) 
            button change Password