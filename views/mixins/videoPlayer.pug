mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.fileUrl)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolumn(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumnButton
                    i.fas.fa-volume-down 
                span
                    span#currentTime 00:00:00
                    |/ 
                    spna#totalTime 10:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play                    
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand